{% comment %}theme-check-disable TemplateLength{% endcomment %}
{%- liquid
  assign section_color = section.settings.color_scheme
  assign enable_video_looping = section.settings.enable_video_looping
  assign two_images_per_row = section.settings.two_images_per_row
  assign first_image_full_width = false
  if section.settings.first_image_full_width and section.settings.two_images_per_row
    assign first_image_full_width = true
  endif


  case section.settings.desktop_image_width
    when 'one-third'
      assign content_width_desktop = 'lg:col-span-8'
      if section.settings.desktop_image_position == 'right'
        assign image_width_desktop = 'lg:col-start-9 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-4'
      endif
    when 'one-half'
      assign content_width_desktop = 'lg:col-span-4'
      if section.settings.desktop_image_position == 'right'
        assign image_width_desktop = 'lg:col-start-7 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-4'
      endif
    when 'three-fifths'
      assign content_width_desktop = 'lg:col-span-5'
      if section.settings.desktop_image_position == 'right'
        assign image_width_desktop = 'lg:col-start-6 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-7'
      endif
    when 'two-thirds'
      assign content_width_desktop = 'lg:col-span-4'
      if section.settings.desktop_image_position == 'right'
        assign image_width_desktop = 'lg:col-start-5 lg:col-end-13'
      else
        assign image_width_desktop = 'lg:col-span-8'
      endif
  endcase

  if two_images_per_row == true and product.media.size > 1
    assign left_over = product.media.size | modulo: 2
  endif

  assign negative_margin = false
  if settings.fill_image_to_border_edge
    assign negative_margin = true
  endif

-%}

<section class="lg-middle lg-middle-flex grid grid-cols-1 lg:grid-cols-12 lg:bg-border grid-flow-row-dense lg:gap-gutter border-t-grid border-grid-color" x-data="ThemeSection_{{ section.id | handleize | replace: '-', '_' }}()" x-init="mounted()" data-section-id="{{ section.id }}" data-alpine-id="{{ section.id | handleize | replace: '-', '_' }}" data-section-type="product" data-enable-history-state="true" data-enable-image-zoom={{ section.settings.enable_image_zoom | json }} data-variant-image-behaviour="{{ section.settings.variant_image_behaviour }}" data-color-scheme="{{ section_color }}">
  {%- liquid
    assign current_variant = product.selected_or_first_available_variant
    assign featured_media = current_variant.featured_media | default: product.featured_media
    assign has_interactive_media = false
    assign image_index = 0
  -%}
  {%- for media in product.media -%}
    {%- if media.media_type != 'image' -%}
      {%- assign has_interactive_media = true -%}
      {%- break -%}
    {%- endif -%}
  {%- endfor -%}
  <div class="product_content_leftside lg:block tg:hidden lg:col-span-4 column-section bg-scheme-background lg-middle-child">    
      <div class="lg:sticky lg:top-sticky-header py-theme product-block-area product-area-block section-x-padding ">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            
            {%- when 'title' -%}
              <h1 {{ block.shopify_attributes }} class="product-title-block mt-4 break-words font-heading {{ settings.template_heading_size }}">
                {%- if feature_product_section -%}<a href="{{ product.url }}">{%- endif -%}
                {{ product.title }}
                {%- if feature_product_section -%}
                </a>
                {%- endif -%}
              </h1>
            {%- when 'vendor' -%}
              {%- liquid
                assign use_collection_vendor_link = false
                for collection in product.collections
                if collection.title == product.vendor
                  assign use_collection_vendor_link = true
                  assign vendor_collection = collection
                  break
                endif
                endfor
              -%}
              {%- if use_collection_vendor_link -%}
              <p {{ block.shopify_attributes }} class="vendor relative z-10 product-vendor-block"><a class="text-base mt-4 text-scheme-meta" href="{{ vendor_collection.url }}">{{ vendor_collection.title }}</a></p>
              {%- else -%}
              <p {{ block.shopify_attributes }} class="vendor relative z-10 product-vendor-block text-base mt-4 text-scheme-meta">{{ product.vendor | link_to_vendor }}</p>
              {%- endif -%}
            {%- when 'description' -%}          
                {%- liquid
                  assign enable_collapsible_tabs = block.settings.enable_collapsible_tabs
                  assign truncate_description = block.settings.truncate_description
                -%}
                {% render 'product-block-description',
                  enable_collapsible_tabs: enable_collapsible_tabs,
                  truncate_description: truncate_description,
                  section_color: section_color,
                  product: product
                %}                  
            {%- when 'richtext' -%}          
                {% render 'product-block-richtext', block: block %}
              
            {%- when 'collapsible_tab' -%}
                {% render 'product-block-collapsible-tab',
                    block: block,
                    tab_counter: tab_counter
                %}
                {%- assign tab_counter = tab_counter | plus: 1 -%}            
            {%- when 'icon_list' -%}            
                {% render 'product-block-icon-list',
                    block: block,
                    section_color: section_color
                %}                    
            {%- when 'complementary' -%}            
                {% render 'product-block-complementary',
                    block: block,
                    product: product,
                    section: section,
                    section_color: section_color
                %}            
          {%- endcase -%}
        {% endfor %}
      </div>    
  </div>
  <div class="relative {% if product.media.size > 1 %}pb-8{% endif %} lg:pb-0 product-media-container bg-scheme-background text-scheme-text {{ image_width_desktop }} {% unless settings.fill_image_to_border_edge %}border-b-grid border-grid-color lg:border-0{% endunless %}" data-product-single-media-group>
    <div class="splide splide--product lg:sticky lg:top-sticky-header  {% if negative_margin %}lg:-mb-theme-width{% endif %}" data-drag-disabled="{{ has_interactive_media }}" {% if product.media.size > 1 %}data-slideshow-enabled="true"{% endif %} data-width='0'>
      <div class="transition-max-height splide__track {% if settings.fill_image_to_border_edge %}border-b-grid border-grid-color lg:border-0{% endif %} {% unless settings.fill_image_to_border_edge %}lg:p-4{% endunless %} {% if negative_margin %}lg:border-b-grid lg:border-grid-color{% endif %}">
        <ul class="splide__list lg:w-full lg:grid {% if two_images_per_row and product.media.size > 1 %}lg:grid-cols-2{% else %}lg:grid-cols-1{% endif %} {% if settings.fill_image_to_border_edge %}lg:gap-gutter {% comment %}lg:bg-border{% endcomment %}{% else %}lg:gap-4{% endif%}">
          {%- if featured_media != null -%}
            {%- assign media = featured_media -%}
            <li  class="{% if left_over > 0 or first_image_full_width %}col-span-2{% endif %} splide__slide bg-scheme-background" data-index="0" data-first-media>
              {%- render 'product-media',
                media: media,
                image_index: image_index,
                section_color: section_color,
                enable_video_looping: enable_video_looping
              -%}
            </li>
            {%- if media.media_type == 'image' -%}
              {%- assign image_index = image_index | plus: 1 -%}
            {%- endif -%}
          {%- endif -%}
          {% for media in product.media %}
              {% if forloop.first %}
                {%- assign first_media = media -%}
              {% endif %}              
              {%- liquid
                assign full_width_image = false
                if left_over > 0 and forloop.first and featured_media == null
                  assign full_width_image = true
                elsif first_image_full_width and forloop.first and featured_media == null
                  assign full_width_image = true
                elsif first_image_full_width and forloop.last and left_over == 0
                  assign full_width_image = true
                elsif first_image_full_width and product.media.size == 2
                  assign full_width_image = true
                endif
              -%}
              {%- unless media.id == featured_media.id -%}
              <li {% if featured_media == null and forloop.first %}data-first-media{% endif %} class="{% if full_width_image %}col-span-2{% endif %} splide__slide bg-scheme-background" data-index="{% if featured_media == null %}{{ forloop.index0 }}{% else %}{{ forloop.index }}{% endif %}">
                {%- render 'product-media',
                  media: media,
                  image_index: image_index,
                  section_color: section_color,
                  enable_video_looping: enable_video_looping
                -%}
              </li>
              {%- if media.media_type == 'image' -%}
                {%- assign image_index = image_index | plus: 1 -%}
              {%- endif -%}
              {% endunless %}
            {% endfor %}
        </ul>
      </div>
      {% assign first_3d_model = product.media | where: "media_type", "model" | first %}
      <div class="js-enabled lg:hidden splide__arrows text-scheme-text absolute right-0 {% if first_3d_model %}bottom-slide-arrows{% endif %} mr-1 lg:mr-4 text-right mt-2">
        <button class="splide__arrow splide__arrow--prev w-8">
          <span class="visually-hidden">{{ 'sections.slideshow.previous_slide' | t }}</span>
          <span class="block">{% render 'icon-previous' %}</span>
        </button>
        <button class="splide__arrow splide__arrow--next w-8">
          <span class="visually-hidden">{{ 'sections.slideshow.next_slide' | t }}</span>
          <span class="block">{% render 'icon-next' %}</span>
        </button>
      </div>
      {%- if first_3d_model -%}
        <div class="section-x-padding text-center">
          <button aria-label="{{ 'products.product.view_in_space_label' | t }}"
                  class="product-single__view-in-space mt-4 mb-2 lg:my-4 w-full py-2 pl-2 pr-4 max-w-sm text-center border-text border-scheme-text"
                  data-shopify-xr
                  data-shopify-model3d-id="{{ first_3d_model.id }}"
                  data-shopify-title="{{ product.title }}"
                  data-shopify-xr-hidden>
            <span class="inline-block w-6 align-middle">{% render 'icon-3d-model' %}</span><span class="text-sm">{{ 'products.product.view_in_space' | t }}</span>
          </button>
        </div>
      {%- endif -%}
    </div>
  </div>

  {% comment %} <div class="product-content-container bg-scheme-background text-scheme-text section-x-padding {{ content_width_desktop }}" x-ref="productContent"> {% endcomment %}
  <div class="product_content_rightside lg-middle-child product-content-container column-section bg-scheme-background text-scheme-text section-x-padding lg:col-span-4" x-ref="productContent">
    <div class="lg:sticky lg:top-sticky-header py-theme product-block-area product-area-block">
      {%- render 'product-form-custom', product: product, section: section, section_color: section_color -%}
    </div>
  </div>

